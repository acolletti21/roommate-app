<% if @user.errors.any? %>
  <div class="error-explanation">
    <h2><%= pluralize(@users.errors.count, "error") %>prohibited this contact from being saved:</h2>
    
    <ul>
      <% @user.errors.full_messages.each do |error|%>
        <li><h3><%= error %></h3></li>
      <%end%>
    </ul>
  </div>
<%end%>

<div class="col-md-4 col-sm-offset-4" style="padding: 50px; padding-top: 100px">
  <div class="post-image" style="box-shadow:1px 5px 8px #a88888; padding: 25px; background-color: #fff; opacity: 0.8">
  <h2> Create Account</h2>

    <%=form_tag "/users", method: :post do%>
      <div class="form-group">
        <%= label_tag :user_name  %>
        <%= text_field_tag :user_name, @user.user_name, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, @user.email, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= label_tag :password%>
        <%= password_field_tag :password, "", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= label_tag :password_confirmation%>
        <%= password_field_tag :password_confirmation, "", class: "form-control"%>
      </div>

      
      <%= submit_tag "Sign Up", class: "btn btn-default"%>  &nbsp; &nbsp; &nbsp;<i>or<a href="/login" style="display: inline"> log in</a></i></span>
      
    <%end%>
  </div>
</div>
