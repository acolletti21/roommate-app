
          <div id="main">
<!-- Main Content start-->
            <div class="content">
               <div class="container" style="padding: 0% 4%">
                  <div class="row">
                     <div class="posts-block col-lg-7 col-md-7 col-sm-7 col-xs-12">
                        <!-- Recent work start-->
                        <div class="recentwork_wrapper">
                           <!-- Slider Start-->
                           <div class="post-image" style="box-shadow:1px 5px 8px #a88888">
                              <!-- Slider Start-->
                              <div class=" theme-default">
                                 <div>
                                    <a href="#" style="text-align: center"><img src="/img/users/userpic<%= @user.id%>.png" alt="Nature"></a>
                                 </div>
                              </div>
                              <div class="clearfix"></div>
                              <!-- Slider End--> 
                           </div>
                           <h3>About</h3>
                           <div class="post-content top-pad">
                              <p class="bio-text">
                                 <%= @user.bio %>
                              </p>
                           </div>
                        </div>
                        <!-- Recent work end-->
                     </div>
                     <!-- Left Section End -->
                     <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12 sidebar">
                        <div class="widget">
                           <h3 class="title"><%= @user.user_name.titleize %>'s Profile</h3>
    <em></em>
                        </div>
                        <!-- Project Description End -->  
                        <div class="widget">
                           <div class="favourite">
                              <a class="btn-special btn-grey" href="#"><strong><i class="fa fa-heart"></i> Add to Favorites</strong></a>
                           </div>
                           <div class="clearfix"></div>
                        </div>
                        <div class="widget">
                           <div class="member-social dark">
                              <a class="facebook" href="#"><i class="fa fa-facebook"></i></a>
                              <a class="twitter" href="#"><i class="fa fa-twitter"></i></a>
                              <a class="gplus" href="#"><i class="fa fa-google-plus"></i></a>
                              <a class="linkedin" href="#"><i class="fa fa-linkedin"></i></a>
                           </div>
                           <div class="clearfix"></div>
                        </div>
                        <!-- Project Details Start -->
                        <div class="widget project_details">
                           <h3 class="title">Match Details</h3>
                           <div class="details-content">
                              <span><strong>Match Percent</strong><em><%= @user.match_percent(current_user) %>%</em></span>

                            <% if @user.age_answers(current_user) == 1 %>
                              <span class="match-true">
                            <% else %>
                              <span>
                              <%end%>
                              <strong>Age</strong><em><%= @user.age %></em>
                                <strong>Minimum Age</strong><em><%= @user.min_age %></em>
                                <strong>Maximum Age</strong><em><%= @user.max_age %></em>
                              </span>

                            <% if @user.gender_answers(current_user) == 1 %>
                              <span class="match-true">
                            <% else %>
                              <span>
                              <%end%>
                                <strong>Gender</strong><em><%= @user.gender %></em>
                                <strong>Roommate Preference</strong><em><%= @user.gender_pref %></em>
                              </span>

                            <% if @user.price_answers(current_user) == 1 %>
                              <span class="match-true">
                            <% else %>
                              <span>
                              <%end%>
                                <strong>Minimum Rent</strong><em><%= @user.min_price %></em>
                                <strong>Maximum Rent</strong><em><%= @user.max_price %></em>
                              </span>

                            <% if @user.roommate_answers(current_user) == 1 %>
                              <span class="match-true">
                            <% else %>
                              <span>
                              <%end%>
                                <strong>Min Roommates</strong><em><%= @user.min_roommates %></em>
                                <strong>Max Roommates</strong><em><%= @user.max_roommates %></em>
                              </span>

                            <% if @user.pet_answers(current_user) == 1 %>
                              <span class="match-true">
                            <% else %>
                              <span>
                              <%end%>
                                <strong>Has pets?</strong><em><%= @user.has_pets %></em>
                                <strong>Fine with pets?</strong><em><%= @user.pets %></em>
                              </span>

                              <span><strong>Neighborhoods</strong><em>&nbsp;</em>
                              <% @user.neighborhoods.each do |neighborhood| %>
                                <% if current_user.neighborhoods.include? neighborhood %>
                                <a href="#" style="color: #81b1c1"> <%= neighborhood.name %></a>
                                <%else%>
                                <a href="#"> <%= neighborhood.name %></a>
                                <%end%>
                              <% end %></span>
                              
                           </div>
                           <div class="clearfix"></div>
                        </div>
                        <% if current_user.id == @user.id%>
                        <div class="widget">
                           <a href=<%= "/users/#{@user.id}/edit" %> class="btn-normal btn-color"><i class="fa fa-hand-right icon-large"></i>  Edit Profile</a>
                        </div>
                        <% end %>
                     </div>
                  </div>
                  <div class="divider"></div>
               </div>
            </div>
          </div>

 



      <div class="col-sm-6 col-sm-offset-3">

        <h1> <%= @user.user_name.titleize %>'s Profile</h1>
        <h4>Age: <%= @user.age %></h4>
        <h4>Minimum Roommate Age: <%= @user.min_age %></h4>
        <h4>Maximum Roommate Age: <%= @user.max_age %></h4>
        <h4>Lowest Acceptable Rent: <%= @user.min_price %></h4>
        <h4>Highest Acceptable Rent: <%= @user.max_price %></h4>
        <h4>Minimum Roommates: <%= @user.min_roommates %></h4>
        <h4>Maximum Roommates: <%= @user.max_roommates%></h4>
        <h4>Have pets? <%= @user.has_pets %></h4>
        <h4>Are roommates with pets okay? <%= @user.pets %></h4>
        <h4>Gender: <%= @user.gender %></h4>
        <h4>Gender Preferences: <%= @user.gender_pref %></h4>
        <h4>Common Neighborhoods: <%= current_user.common_neighborhoods(@user) %></h4>
        <h3>Bio: <%= @user.bio %></h3>
        <% if current_user.age != nil %>
           <h4>common answers:   <%= @user.answer_keys(current_user) %></h4>
           <h4>age match <%= @user.age_answers(current_user) %></h4>
           <h4>pets match <%= @user.pet_answers(current_user) %></h4>
           <h4># roommates match <%= @user.roommate_answers(current_user) %></h4>
           <h4>price match <%= @user.price_answers(current_user) %></h4>
           <h4>gender match <%= @user.gender_answers(current_user) %></h4>
           <h4>neighborhood match <%= @user.neighborhood_answers(current_user) %></h4>
           <h4>Match Percent <%= @user.match_percent(current_user) %>% </h4>
        <% end %>

          
          <% if current_user.id == @user.id%>
            <%= link_to "Edit Profile", "/users/#{@user.id}/edit", class: "btn btn-success" %>
            <%= link_to "Add Neighborhoods", "/users/#{@user.id}/edit/neighborhoods", class: "btn btn-warning" %>
            <div>
              <%= form_tag "/users/#{@user.id}", method: :delete do %>
                  <input class="btn btn-danger" type="submit" value="Remove Profile Answers">
              <% end %>
            </div>
          <% end %>


      </div>


   </body>