<div class="col-md-4 col-sm-offset-4" style="padding: 50px; padding-top: 100px">
  <div class="post-image" style="box-shadow:1px 5px 8px #a88888; padding: 25px; background-color: #fff; opacity: 0.8">
  <h2>Login</h2>
    <%= form_tag "/login", method: :post do%>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
      <span><%= submit_tag "Login", class: "btn btn-default" %> &nbsp; &nbsp; &nbsp;<i>or<a href="/signup" style="display: inline"> sign up</a></i></span>
    <%end%>
  </div>
</div>